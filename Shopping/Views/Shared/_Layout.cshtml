                      </form>
                    </div>
                    <!-- ***** Serach Start ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                      <li class="scroll-to-section"><a asp-controller="Home" class="active">Home</a></li>
                      <li class="scroll-to-section"><a asp-controller="Service">Services</a></li>
                      <li class="scroll-to-section"><a asp-controller="Course">Courses</a></li>
                      <li class="scroll-to-section"><a asp-controller="Team">Team</a></li>
                      <li class="scroll-to-section"><a asp-controller="Event">Events</a></li>
                      <li class="scroll-to-section"><a asp-controller="Contact">Register Now!</a></li>
                  </ul>   
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
